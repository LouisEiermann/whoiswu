GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash
# Optional fallback chain (tried in order)
# GEMINI_MODELS=gemini-2.0-flash,gemini-2.5-flash,gemini-2.5-flash-lite

# Timeout for model responses (ms)
WHOISWU_MODEL_TIMEOUT_MS=30000

# Gemini maximum output token budget
WHOISWU_MAX_OUTPUT_TOKENS=4096

# Maximum transcript characters to send to the model
WHOISWU_MAX_TRANSCRIPT_CHARS=4000

# Maximum number of transcript turns (lines after parsing)
WHOISWU_MAX_CHAT_TURNS=300

# Maximum number of distinct speakers allowed in a conversation
WHOISWU_MAX_SPEAKERS=6

# Rate limits
WHOISWU_MAX_REQ_PER_MINUTE=8
WHOISWU_MAX_REQ_PER_DAY=150

# Optional: comma-separated IP allowlist for friends-only mode
# WHOISWU_ALLOWLIST=127.0.0.1,1.2.3.4
